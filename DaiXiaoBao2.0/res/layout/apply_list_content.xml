<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_yanhui"
        android:orientation="vertical"
        android:paddingBottom="12.0dp"
        android:paddingTop="12.0dp" >

        <com.daixiaobao.widget.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/apply_list_image"
            android:layout_width="56.0dp"
            android:layout_height="56.0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_morentouxiang"
            app:border_color="@color/new_yanhui"
            app:border_width="0dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dp"
            android:layout_toRightOf="@+id/apply_list_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/apply_list_content_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ID:12345667"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/new_yese" />

            <TextView
                android:id="@+id/apply_list_content_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dp"
                android:layout_weight="1"
                android:text="签名：没有填写"
                android:textColor="@color/grey"
                android:textSize="12.0dp" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/apply_list_content_delete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="32.0dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/apply_list_content_yes"
        android:background="@drawable/btn_bg_red"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="拒绝"
        android:textColor="@color/new_yanhui" />

    <Button
        android:id="@+id/apply_list_content_yes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="32.0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_bg_blue"
        android:layout_marginLeft="12.0dp"
        android:layout_marginRight="12.0dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="同意"
        android:textColor="@color/new_yanhui" />

</RelativeLayout>