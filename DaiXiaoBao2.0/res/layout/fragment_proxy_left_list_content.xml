<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_yanhui"
    >

    <ImageView
        android:id="@+id/proxy_left_list_pic"
        android:layout_width="fill_parent"
        android:layout_height="140.0dp" 
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/proxy_left_list_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:layout_alignBottom="@+id/proxy_left_list_pic"
        android:gravity="center"
        android:textSize="16.0dp"
        android:padding="8.0dp"
        android:textColor="@color/new_shenhong"
        />
</RelativeLayout>