<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/more_two_dimensional_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/qrcode"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/g1"
                android:layout_width="fill_parent"
                android:layout_height="72.0dp"
                android:orientation="horizontal" 
                >

                <Button
                    android:id="@+id/more_modify_password"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    
                    android:text="修改密码" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dp"
                    android:src="@drawable/ic_https_grey600_24dp"
                    android:layout_centerVertical="true"/>
			</RelativeLayout>	
			
            
            
            <RelativeLayout
                android:id="@+id/g3"
                android:layout_width="fill_parent"
                android:layout_height="72.0dp"
                android:orientation="horizontal" 
                android:layout_below="@+id/g1"
                >
                <Button
                    android:id="@+id/more_check_version"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="应用版本" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dp"
                    android:src="@drawable/ic_system_update_grey600_24dp"
                    android:layout_centerVertical="true"/>
			</RelativeLayout>
			
            <RelativeLayout
                android:id="@+id/g4"
                android:layout_width="fill_parent"
                android:layout_height="72.0dp"
                android:orientation="horizontal" 
                android:layout_below="@+id/g3"
                >
                <Button
                    android:id="@+id/more_opinion"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="意见反馈" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dp"
                    android:src="@drawable/ic_quick_contacts_mail_grey600_24dp"
                    android:layout_centerVertical="true"/>
			</RelativeLayout>
			
            <RelativeLayout
                android:id="@+id/g5"
                android:layout_width="fill_parent"
                android:layout_height="72.0dp"
                android:orientation="horizontal" 
                android:layout_below="@+id/g4"
                >
                <Button
                    android:id="@+id/more_about"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="关于代销宝" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dp"
                    android:src="@drawable/ic_stars_grey600_24dp"
                    android:layout_centerVertical="true"/>
			</RelativeLayout>
			
            <RelativeLayout
                android:id="@+id/g6"
                android:layout_width="fill_parent"
                android:layout_height="72.0dp"
                android:orientation="horizontal" 
                android:layout_below="@+id/g5"
                >
                 <Button
                    android:id="@+id/more_cancellation"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="注销用户"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dp"
                    android:src="@drawable/ic_accessibility_grey600_24dp"
                    android:layout_centerVertical="true"/>
			</RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>