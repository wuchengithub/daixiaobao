<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_shenhui"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/more_two_dimensional_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/qrcode"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/more_modify_password"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_tab_non"
                    android:text="修改密码" />

                <Button
                    android:id="@+id/more_login"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="重新登录" />

                <Button
                    android:id="@+id/more_check_version"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_tab_non"
                    android:text="应用版本" />

                <Button
                    android:id="@+id/more_opinion"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="帮助中心" />

                <Button
                    android:id="@+id/more_about"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_tab_non"
                    android:text="关于代销宝" />

                <Button
                    android:id="@+id/more_help"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="帮助中心"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/more_cancellation"
                    style="@style/my_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:text="注销用户"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>