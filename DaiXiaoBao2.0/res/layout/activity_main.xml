<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/base_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:paddingBottom="8.0dp"
        android:paddingLeft="8.0dp"
        android:paddingRight="8.0dp"
        android:paddingTop="24.0dp" />

    <RadioGroup
        android:id="@+id/home_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" 
        android:visibility="gone">

        <RadioButton
            android:id="@+id/home_indicator_one"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/function_radio_button_selector_bg"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/friend_selector"
            android:drawablePadding="6.0dp"
            android:textColor="@color/text_color"
            android:textSize="16.0sp" 
            android:text="好友"/>

        <RadioButton
            android:id="@+id/home_indicator_two"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginLeft="4.0dp"
            android:background="@drawable/function_radio_button_selector_bg"
            android:button="@null"
            android:drawablePadding="6.0dp"
            android:textColor="@color/text_color"
            android:textSize="16.0sp" />

        <RadioButton
            android:id="@+id/home_indicator_three"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginLeft="4.0dp"
            android:background="@drawable/function_radio_button_selector_bg"
            android:button="@null"
            android:drawablePadding="6.0dp"
            android:textColor="@color/text_color"
            android:textSize="16.0sp" />
        <RadioButton
            android:id="@+id/home_indicator_four"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginLeft="4.0dp"
            android:background="@drawable/function_radio_button_selector_bg"
            android:button="@null"
            android:drawablePadding="6.0dp"
            android:textColor="@color/text_color"
            android:textSize="16.0sp" />
    </RadioGroup>

</RelativeLayout>