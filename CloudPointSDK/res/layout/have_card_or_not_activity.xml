<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa200"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="已有大玩家会员卡？"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="5dip"
        android:text="已有大玩家会员卡绑定，马上送5枚游戏币；"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="5dip"
        android:text="新办大玩家会员卡（24小时内）即绑即送20枚游戏币；"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
         android:layout_gravity="left"
        android:text="绑定玩家会员卡后，凭“友分”可无限领取游戏币。"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <Button
        android:id="@+id/have_card_or_not_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dip"
        android:background="@drawable/button_submit_selector"
        android:padding="10dip"
        android:text="有，我要绑定领币"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/have_card_or_not_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有会员卡"
        android:textColor="#ffffff"
        android:textSize="22sp" />

</LinearLayout>